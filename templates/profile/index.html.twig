{% extends 'base.html.twig' %}

{% block title %}Mon profil !
{% endblock %}

{% block body %}
	<div class="page">

		<h1>mon profil</h1>
		<div class="card profile">
			<img src="{{ asset ('uploads/images/') }}{{ app.user.avatar }}" class="card-img-top" alt="photo de profil">
			<div class="card-body">
				<h5 class="card-title">{{ app.user.prenom }}
					{{ app.user.nom }}</h5>
				<p class="card-text"></p>
				<p>{{ app.user.adresse }}</p>
				<p>{{ app.user.complement }}</p>
				<p>{{ app.user.codepostale }}
					{{ app.user.ville }}</p>
			</p>
		</div>
		<ul class="list-group list-group-flush">
			<li class="list-group-item">Date de naissance :
				{{ app.user.naissance|date('d/m/Y') }}</li>
			<li class="list-group-item">Téléphone :
				{{ app.user.telephone }}</li>
		</ul>
		<div class="card-footer">
			{{ app.user.genre }}
		</div>
	</div>
	<div class="validation">
		<a href="{{ path('app_user_edit', {'id': app.user.id}) }}" class="btn btn-warning">éditer</a>
	</div>
</div>{% endblock %}
