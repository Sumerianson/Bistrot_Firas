{% extends 'base.html.twig' %}

{% block title %}Caroussel index
{% endblock %}

{% block body %}
	<div class="page">
		<h1>Caroussel index</h1>

		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Photo</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for caroussel in caroussels %}
					<tr>
						<td>{{ caroussel.id }}</td>
						<td>
						<img src="{{ asset ('caroussel.photo') }} " class="d-block w-100" alt="photo de caroussel">
						</td>
						<td>
							<a href="{{ path('app_caroussel_show', {'id': caroussel.id}) }}">show</a>
							<a href="{{ path('app_caroussel_edit', {'id': caroussel.id}) }}">edit</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="2">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a href="{{ path('app_caroussel_new') }}">Create new</a>
	</div>
{% endblock %}
