{% extends 'base.html.twig' %}

{% block title %}Formule
{% endblock %}

{% block body %}
	<div class="page">
		<h1>Formule</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ formule.id }}</td>
				</tr>
				<tr>
					<th>Nom</th>
					<td>{{ formule.nom }}</td>
				</tr>
				<tr>
					<th>Description</th>
					<td>{{ formule.description }}</td>
				</tr>
				<tr>
					<th>Prix</th>
					<td>{{ formule.prix }}</td>
				</tr>
				<tr>
					<th>Photo</th>
					<td>{{ formule.photo }}</td>
				</tr>
			</tbody>
		</table>

		<a href="{{ path('app_formule_index') }}" class="btn btn-primary">retour à la liste</a>
		
		{% if is_granted(['ROLE_ADMIN']) %}
		<a href="{{ path('app_formule_edit', {'id': formule.id}) }}" class="btn btn-warning">éditer</a>

		{{ include('formule/_delete_form.html.twig') }}
		{% endif %}
	</div>
{% endblock %}
