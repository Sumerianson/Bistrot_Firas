{% extends 'base.html.twig' %}

{% block title %}User
{% endblock %}

{% block body %}
	<div class="page">
		<h1>User</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ user.id }}</td>
				</tr>
				<tr>
					<th>Email</th>
					<td>{{ user.email }}</td>
				</tr>
				<tr>
					<th>Roles</th>
					<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
				</tr>
				<tr>
					<th>Nom</th>
					<td>{{ user.nom }}</td>
				</tr>
				<tr>
					<th>Prenom</th>
					<td>{{ user.prenom }}</td>
				</tr>
				<tr>
					<th>Adresse</th>
					<td>{{ user.adresse }}</td>
				</tr>
				<tr>
					<th>Complement</th>
					<td>{{ user.complement }}</td>
				</tr>
				<tr>
					<th>Naissance</th>
					<td>{{ user.naissance ? user.naissance|date('Y-m-d') : '' }}</td>
				</tr>
				<tr>
					<th>CodePostale</th>
					<td>{{ user.codePostale }}</td>
				</tr>
				<tr>
					<th>Ville</th>
					<td>{{ user.ville }}</td>
				</tr>
				<tr>
					<th>Telephone</th>
					<td>{{ user.telephone }}</td>
				</tr>
				<tr>
					<th>Genre</th>
					<td>{{ user.genre }}</td>
				</tr>
			</tbody>
		</table>
		<div class="validation">
			<a href="{{ path('app_user_index') }}" class="btn btn-primary">retour à la liste</a>

			<a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-warning">éditer</a>

			{{ include('user/_delete_form.html.twig') }}
		</div>
	</div>
{% endblock %}
