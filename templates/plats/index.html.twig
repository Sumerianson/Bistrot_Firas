{% extends 'base.html.twig' %}

{% block title %}Plats index
{% endblock %}

{% block body %}
	<div class="page">
		<h1>Plats index</h1>

		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Nom</th>
					<th>Description</th>
					<th>Catégorie</th>
					<th>Prix</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for plat in plats %}
					<tr>
						<td>{{ plat.id }}</td>
						<td>{{ plat.nom }}</td>
						<td>{{ plat.description }}</td>
						<td>{{ plat.categorie }}</td>
						<td>{{ plat.prix }}
							€</td>
						<td>
							<a href="{{ path('app_plats_show', {'id': plat.id}) }}" class="btn btn-light">montrer</a>
							<a href="{{ path('app_plats_edit', {'id': plat.id}) }}" class="btn btn-warning">éditer</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="6">Aucun plat trouvé</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
		<div class="validation">
			<a href="{{ path('app_plats_new') }}" class="btn btn-primary">Créer un plat</a>
		</div>
	</div>
{% endblock %}
